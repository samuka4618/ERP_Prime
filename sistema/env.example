# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados
DB_PATH=./database/chamados.db

# Configurações do SQL Server (para cadastros de clientes)
DB_SERVER=localhost
DB_DATABASE=consultas_tess
DB_USER=sa
DB_PASSWORD=sua_senha_aqui
DB_PORT=1433
DB_ENCRYPT=false
DB_TRUST_CERT=true

# Configurações de Autenticação
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=24h

# Configurações de E-mail (OPCIONAL - pode deixar vazio se não quiser enviar emails)
# IMPORTANTE: Para Gmail, você precisa usar "App Password" (senha de app), não a senha normal
# 1. Acesse: https://myaccount.google.com/apppasswords
# 2. Crie uma senha de app para "Mail" e "Outro (nome personalizado)" com nome "Sistema de Chamados"
# 3. Use a senha gerada (16 caracteres) no campo SMTP_PASS abaixo
# 
# Se você não configurar email, o sistema continuará funcionando normalmente,
# apenas as notificações por email não serão enviadas (mas notificações no sistema continuarão)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app_gmail_aqui  # Use App Password do Gmail (16 caracteres, sem espaços)
SMTP_FROM=Sistema de Chamados <seu_email@gmail.com>

# Configurações de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configurações de SLA (em horas)
SLA_FIRST_RESPONSE=4
SLA_RESOLUTION=24
REOPEN_DAYS=7
