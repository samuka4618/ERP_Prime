{
  "name": "erp-prime",
  "version": "2.0.0",
  "description": "ERP PRIME - Sistema de gestão empresarial modular com módulos de Chamados e Cadastros",
  "main": "dist/src/server.js",
  "scripts": {
    "test-sql": "ts-node scripts/test-sql-connection.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:all": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:all": "echo Building backend... && npm run build && echo Building frontend... && cd frontend && npm run build && cd .. && echo Build completed successfully!",
    "install:all": "npm install && cd frontend && npm install",
    "optimize": "ts-node src/database/optimize.ts",
    "test": "jest",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:cnpj-status": "ts-node src/database/run-cnpj-status-migration.ts",
    "migrate:user-profile": "ts-node src/core/database/run-user-profile-migration.ts",
    "migrate:reports-types": "ts-node src/core/database/migrate_reports_types.ts",
    "migrate:push-tokens": "ts-node src/core/database/run-device-push-tokens-migration.ts",
    "check-user": "ts-node scripts/check-user.ts",
    "create-user": "ts-node scripts/create-user.ts",
    "db:reset": "node scripts/reset-db.js"
  },
  "keywords": [
    "erp",
    "prime",
    "erp-prime",
    "gestão-empresarial",
    "chamados",
    "cadastros",
    "modular"
  ],
  "author": "Samuel",
  "license": "MIT",
  "dependencies": {
    "@types/mssql": "^9.1.8",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "axios": "^1.7.9",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^12.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/exceljs": "^0.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
